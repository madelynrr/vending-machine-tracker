<%= @snack.name %>
<p>Price: <%= number_to_currency(@snack.price) %></p>

<p>Locations:</p>
<% @snack.machines.each do |machine| %>
  <section id = "machine-<%= machine.id %>">
    <%= machine.location %>
    <p>Average Price: <%= number_to_currency(machine.average_price) %></p>
    <p>Count of Snack Types: <%= machine.snacks.length %></p>
  </section>
  </br>
  </br>
<% end %>
